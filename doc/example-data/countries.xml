  <group>
    <csv>
      <param name="input-file" value="dbpedia-countries.csv"/>
      <param name="header-line" value="false"/>
      
      <column name="1" property="ID"/>
      <column name="2"
              property="NAME"
              cleaner="no.priv.garshol.duke.examples.CountryNameCleaner"/>
      <column name="3"
              property="AREA"/>
      <column name="4"
              property="CAPITAL"
              cleaner="no.priv.garshol.duke.examples.CapitalCleaner"/>
    </csv>
  </group>

  <group>
    <csv>
      <param name="input-file" value="mondial.csv"/>
      
      <column name="id" property="ID"/>
      <column name="country"
              property="NAME"
              cleaner="no.priv.garshol.duke.examples.CountryNameCleaner"/>
      <column name="capital"
              property="CAPITAL"
              cleaner="no.priv.garshol.duke.LowerCaseNormalizeCleaner"/>
      <column name="area"
              property="AREA"/>
    </csv>
  </group>
</duke>