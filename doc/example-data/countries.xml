
<duke>
  <object class="no.priv.garshol.duke.NumericComparator"
          name="AreaComparator">
    <param name="min-ratio" value="0.7"/>
  </object>
  
  <schema>
    <threshold>0.7</threshold>
    <path>/tmp/dukeix</path>

    <property type="id">
      <name>ID</name>
    </property>

    <property>
      <name>NAME</name> 
      <comparator>no.priv.garshol.duke.Levenshtein</comparator>
      <low>0.3</low>
      <high>0.88</high>
    </property>    
    <property>
      <name>AREA</name> 
      <comparator>AreaComparator</comparator>
      <low>0.2</low>
      <high>0.6</high>
    </property>
    <property>
      <name>CAPITAL</name> 
      <comparator>no.priv.garshol.duke.Levenshtein</comparator>
      <low>0.4</low>
      <high>0.88</high>
    </property>    
  </schema>

